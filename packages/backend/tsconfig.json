{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "lib": ["ESNext"],
    "types": []
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}